@model IEnumerable<watersaver.Models.Tip>


@{
    ViewBag.Title = "Save Our Water";
    Layout = "~/Views/Shared/_Layoutpage1.cshtml";
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<!------ Include the above in your HEAD tag ---------->
<link href="~/Content/wireframe.css" rel="stylesheet" />
@Styles.Render("~/Content/css")
<link href="~/Content/TipNew.css" rel="stylesheet" />
<link href="~/Content/qstyle.css" rel="stylesheet" />
<link href="~/Content/Style.css" rel="stylesheet" />


<!-- Font stylesheet -->
<link href="https://fonts.cdnfonts.com/css/komika-hand" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Raleway:wght@600&display=swap" rel="stylesheet">
<!-- Font stylesheet -->

<style>
    .overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        width: 100%;
        opacity: 0;
        transition: .5s ease;
        background-color: #000;
        transform: translate(-0%, 0%);
    }

    .equal-hight:hover .overlay {
        opacity: 0.85;
    }

    .equal-hight:hover #tips-title {
        opacity: 0;
    }


    .text {
        color: white;
        font-size: 20px;
        position: relative;
        top: 20%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        text-align: center;
        padding: 10px 10px;
    }

    .equal-hight:hover #ts {
        opacity: 1;
    }


    /* The Modal (background) */
    .modal {
        display: none; /* Hidden by default */
        position: fixed; /* Stay in place */
        z-index: 1; /* Sit on top */
        padding-top: 100px; /* Location of the box */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.8); /* Black w/ opacity */
    }

    /* Modal Content */
    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 50%;
        animation: fadeInRight 1s ease;
    }

    /* The Close Button */
    .close {
        color: #aaaaaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }

    #tip-modal {
        width: 30%;
    }


    .row {
        width: 100%;
        margin: 0px;
    }
</style>

<div class="col-12" style="        background-image: url('../Assets/mid2.jpg');
        background-position: center center;
        background-size: cover;
        padding: 0px;
        height: 12%;">

    <div class="col-12" style="background-color:rgba(45,45,45,0.3); width:100%; height:100%;">
        <div class="row">
            <div class="p-4 col-lg-8" style="color:white;">
            </div>

        </div>
    </div>
</div>

<div class="container body-content" style="min-height: 100%">
    <div class="container col-md-12">

        <h1 class="col-12" style="font-size: xx-large;font-weight: bold;color:black; text-align:left; font-family:'Komika Hand', sans-serif; color:#348172; margin:40px 0px;  padding-left:0;">Save our water</h1><br>
        <h3 class=" text-dark" style="font-weight: bolder">What is the problem?</h3><br>
        <p style="font-size: 1.25rem; margin: 25px 0px;">
            Freshwater makes up a very small fraction of all water on the planet. While nearly 70 percent of the world is covered by water, only 2.5 percent of it is fresh.
            The rest is saline and ocean-based. Even then, just 1 percent of our freshwater is easily accessible, with much of it trapped in glaciers and snowfields.
            A full 16 years ago, in 2001, the UN Population Fund warned that the world will begin to run out of fresh water by 2050, and UNFPA's World Population Report from 1992 also warns of water shortages by 2050.
        </p>
    </div>

    <div class="container col-md-12" style="margin-bottom: 40px;">

        <h3 class=" text-dark" style="font-weight: bolder ">It's time to do it!</h3><br>
        <p style="font-size: 1.25rem; margin: 25px 0px;">
            Australia is the driest inhabited continent on Earth and yet despite this scarcity of water, Australians are among the highest consumers of water per capita in the world. Although we do not have the ability to change the entire environment, everyone’s efforts are also powerful.
            We can start from our daily life to save water and protect our water resources. Small changes in habits may bring different values.
        </p>
    </div>


    <section class="our-webcoderskull padding-lg ">
        <div class="container">

            <ul class="row">

                @foreach (var item in Model)
                {


                    <li class="col-12 col-md-6 col-lg-3 " style=" padding-top:30px; ">

                        <div class="col-xl-12 col-md-12 mb-12 equal-hight" style="padding: 0;">
                            <div class="card border-0 shadow">

                                <img src="@Url.Content("~/Uploads/"+item.Path)" class="card-img-top" alt="..." style="width: 100%; object-fit: cover; height:200px" />
                                <div class="card-body text-center" style="min-height:90px">
                                    <div class="card-text text-black-50" style="font-weight:bold;">@Html.DisplayFor(modelItem => item.Name)</div>
                                </div>
                            </div>

                            <div class="overlay">

                                <div class="text" id="ts " style="top: 50%;">
                                    <a id=" @Html.DisplayFor(modelItem => item.Id)" onclick="myFunction(this.id)" href="javascript:void(0)" style="color:white">
                                        <h3 class="font-weight-bold" style="color:white;">
                                            @Html.DisplayFor(modelItem => item.Name)


                                        </h3>
                                        <p style="color:white; font-size:1.1rem">@Html.DisplayFor(modelItem => item.Addition)</p>

                                        <br>
                                        <p style="color:white; font-size:1.1rem;text-decoration: underline; ">Click to learn more</p>

                                        <p class="tiphead" style="display:none">@Html.DisplayFor(modelItem => item.Name)</p>
                                        <p class="addition" style="display:none">@Html.DisplayFor(modelItem => item.Addition)</p>
                                        <p class="tipDes" style="display:none">@Html.DisplayFor(modelItem => item.Description)</p>
                                        <p class="imagepath" style="display:none">@Url.Content("~/Uploads/" + item.Path)</p>

                                    </a>
                                </div>

                            </div>
                        </div>




                    </li>


                }

            </ul>
        </div>
    </section>

    <div class="col-12" style="text-align: right; margin:50px 0px;">
        <button type="submit" class="btn btn-primary" onclick="location.href='/'; ">Back to Home</button>
    </div>


    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div id="tip-modal" class="modal-content" style="background-color: #444; padding: 10px; top: 10%;">
            <div id="modal_box" class="col-md-12" style="background-size: cover;padding: 0 0;">
                <div class="col-md-12" style="background-color:rgba(0, 0, 0, .5); color: white;">
                    <div class="col-md-12" style=" opacity:1;">
                        <h3 id="myhead" class="col-md-12" style=" margin: 0 0; padding: 20px 10px; font-weight: 800; "></h3>
                        <div id="myaddition" class="col-md-12" style="padding: 0px 10px; text-align: justify; font-weight: 600;"> </div>
                        <div id="myDes" class="col-md-12" style="padding: 20px 10px; text-align: justify; font-weight: 600;"> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var modal = document.getElementById("myModal");
    var btn = document.getElementById("button");
    var span = document.getElementsByClassName("close");

    span.onclick = function () {
        modal.style.display = "none";
    }


    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }

    function myFunction(clicked_id) {


        modal.style.display = "block";

        var Tipshead = document.getElementById(clicked_id).getElementsByClassName("tiphead")[0].innerHTML;
        var TipsDes = document.getElementById(clicked_id).getElementsByClassName("tipDes")[0].innerHTML;
        var imagepath = "url('.." + document.getElementById(clicked_id).getElementsByClassName("imagepath")[0].innerHTML + "')";
        var addition = document.getElementById(clicked_id).getElementsByClassName("addition")[0].innerHTML;

        document.getElementById("myhead").innerHTML = Tipshead;

        document.getElementById("myaddition").innerHTML = addition;
        document.getElementById("myDes").innerHTML = TipsDes;
        document.getElementById("modal_box").style.backgroundImage = imagepath;

        //document.getElementById("myImg").src = imagepath;
        console.log(clicked_id);
    }


</script>


