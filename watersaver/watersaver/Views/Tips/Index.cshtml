@model IEnumerable<watersaver.Models.Tip>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<!------ Include the above in your HEAD tag ---------->
<link href="~/Content/wireframe.css" rel="stylesheet" />
@Styles.Render("~/Content/css")
<link href="~/Content/TipNew.css" rel="stylesheet" />
<link href="~/Content/qstyle.css" rel="stylesheet" />
<link href="~/Content/Style.css" rel="stylesheet" />





<h2>Index</h2>

<section class="our-webcoderskull padding-lg ">
    <div class="container">

        <ul class="row">

            @foreach (var item in Model)
            {


                <li class="col-12 col-md-6 col-lg-3">

                    <div class="cnt-block equal-hight" style="height: 349px; animation: fadeInRight 1s ease;">
                        <a href="@Url.Content("~/Tips/Details/" + item.Id)" style="color:black; text-decoration: none; display: block; width: 100%;height: 100%;">

                            <figure><img src="@Url.Content("~/Uploads/"+item.Path)" /></figure>

                            <p>
                                @Html.DisplayFor(modelItem => item.Name)
                            </p>
                            <p>
                                @Html.DisplayFor(modelItem => item.Addition)
                            </p>

                        </a>

                    </div>

                </li>


            }

        </ul>
    </div>
</section>




