@model IEnumerable<watersaver.Models.Tip>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .grid-container {
        display: grid;
        grid-template-columns: 33.33% 33.33% 33.33%;
        padding: 10px;
    }

    .grid-item {
        padding: 20px;
        font-size: 20px;
        text-align: center;
    }


        .grid-item:hover {
            -webkit-transform: scale(1.08);
            transform: scale(1.08);
            box-shadow: 0px 40px 29px -19px rgba(128, 128, 128, 0.52);
        }

    img {
        max-width: 100%;
        max-height: 100%;
        width: 100%;
        height: 200px;
        display: block; /* remove extra space below image */
        object-fit: cover;
    }
</style>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="grid-container">



    @foreach (var item in Model)
    {





        <div class="grid-item pricingTable-firstTable_table pricingTable-firstTable_table__options" style="width:100% ;cursor: pointer;">
            <a href="@Url.Content("~/Tips/Details/" + item.Id)">
                <div> @Html.DisplayFor(modelItem => item.Name)</div>
                <img src="@Url.Content("~/Uploads/"+item.Path)" />
            </a>
            <div>



                @Html.DisplayFor(modelItem => item.Description)
                @Html.DisplayFor(modelItem => item.Addition)

            </div>

        </div>



    }

</div>
